{
    "name": "css-module-wrapper",
    "version": "1.0.3",
    "description": "Webpack loader to silently wrap CSS modules",
    "main": "index.js",
    "keywords": [],
    "author": "danikas2k2@gmail.com",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:danikas2k2/css-module-wrapper.git"
    },
    "scripts": {
        "build": "pnpm run build:dt && pnpm run build:js",
        "build:dt": "tsc src/loader.ts --declaration true --emitDeclarationOnly true --outFile ./index.d.ts",
        "build:js": "esbuild src/loader.ts --bundle --minify --platform=node --packages=external --outfile=./index.js",
        "preversion": "pnpm test",
        "version": "pnpm build && git add --all",
        "postversion": "git push && git push --tags",
        "prepublish": "pnpm test && pnpm build",
        "test": "jest"
    },
    "devDependencies": {
        "@tsconfig/node16": "^1.0.3",
        "@types/jest": "^29.5.0",
        "@types/lodash": "^4.14.191",
        "@types/node": "^18.15.3",
        "@types/react": "^18.0.28",
        "classnames": "^2.3.2",
        "css-loader": "^6.7.3",
        "esbuild": "^0.17.12",
        "jest": "^29.5.0",
        "lodash": "^4.17.21",
        "memfs": "^3.4.13",
        "prettier": "^2.8.5",
        "react": "^18.2.0",
        "style-loader": "^3.3.2",
        "ts-jest": "^29.0.5",
        "ts-loader": "^9.4.2",
        "typescript": "^5.0.2",
        "unionfs": "^4.4.0",
        "webpack": "^5.76.2"
    }
}
