{
    "extends": "@tsconfig/node16",
    "include": [
        "src/*",
        "test/*"
    ],
    "exclude": [
        "node_modules",
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "types": [
            "node",
            "jest",
            "./css.d.ts"
        ],
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noFallthroughCasesInSwitch": true,
        "preserveSymlinks": true
    }
}
